# frontend/.env
# VAMOS Frontend Configuration

# ================================
# API Configuration
# ================================

# Backend API URL - Replace with your OpenShift route
# Development
# VAMOS_API_URL=http://localhost:8000

# Production 
VAMOS_API_URL=https://vamos-flow-git-vamos-flow.eu-at-8.icp.infineon.com

# API timeout in seconds
API_TIMEOUT=30.0

# SSL verification (true/false)
# Set to false only for development with self-signed certificates
API_VERIFY_SSL=false

# ================================
# Application Configuration
# ================================

# Environment (development/production)
ENVIRONMENT=production

# Enable debug logging (true/false)
DEBUG_LOGGING=false

# Application version
APP_VERSION=1.0.0
